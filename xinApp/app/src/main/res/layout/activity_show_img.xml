<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/showimg_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/p1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title123"
            android:textSize="34dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="まあまあちょろいので「ほう今夜はピザにするか」ってなります。\nポ～ン（出水ぽすか）2021年10月16日 21:53 (JST)"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <ImageView
                android:id="@+id/zan"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:src="@drawable/zhan"/>
            <ImageView
                android:id="@+id/bi"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:src="@drawable/toubi"/>
            <ImageView
                android:id="@+id/love"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:src="@drawable/love_shouzang"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:src="@drawable/zhuan"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相关作品"
            android:textSize="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_showimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>